{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "tests/auth.test.ts"],
  "exclude": ["node_modules"]
}

